<%- include('../partials/header', { title: 'Gestionar Usuarios' }) %>
<div class="container mt-4">
  <h3>Gestionar Usuarios Registrados</h3>
  <div class="card shadow-sm mt-3">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead>
            <tr class="table-light">
              <th>Nombre</th>
              <th>Email</th>
              <th>Rol</th>
              <th>Fecha de Registro</th>
              <th class="text-end">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% usuarios.forEach(usuario => { %>
              <tr>
                <td><%= usuario.nombre %></td>
                <td><%= usuario.email %></td>
                <td><span class="badge bg-secondary"><%= usuario.rol %></span></td>
                <td><%= usuario.createdAt.toLocaleDateString('es-ES') %></td>
                <td class="text-end">
                  <!-- BOTÃ“N CORREGIDO Y FUNCIONAL -->
                  <a href="/admin/editar-usuario/<%= usuario._id %>" class="btn btn-sm btn-outline-secondary">Editar</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>
