<%- include('../partials/header', { title: 'Cargar Nuevo Producto' }) %>

<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-header">
      <h3>Cargar Nuevo Producto</h3>
    </div>
    <div class="card-body">
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger" role="alert">
          <%= error %>
        </div>
      <% } %>

      <form action="/admin/crear-producto" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="nombre" class="form-label">Nombre del Producto</label>
          <input type="text" class="form-control" id="nombre" name="nombre" value="<%= typeof oldData !== 'undefined' ? oldData.nombre : '' %>" required>
        </div>
        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="precio" class="form-label">Precio (Gs.)</label>
            <input type="number" class="form-control" id="precio" name="precio" value="<%= typeof oldData !== 'undefined' ? oldData.precio : '' %>" required>
          </div>
          <div class="col-md-6 mb-3">
            <label for="stock" class="form-label">Stock Disponible</label>
            <input type="number" class="form-control" id="stock" name="stock" value="<%= typeof oldData !== 'undefined' ? oldData.stock : '1' %>" required>
          </div>
        </div>
        <div class="mb-3">
            <label for="categoria" class="form-label">Ubicación / Categoría</label>
            <input type="text" class="form-control" id="categoria" name="categoria" value="<%= typeof oldData !== 'undefined' ? oldData.categoria : '' %>" required>
        </div>
        <div class="mb-3">
          <label for="imagen" class="form-label">Foto del Artículo</label>
          <input class="form-control" type="file" id="imagen" name="imagen">
        </div>
        <div class="mb-3">
          <label for="descripcion" class="form-label">Descripción Detallada</label>
          <textarea class="form-control" id="descripcion" name="descripcion" rows="4" required><%= typeof oldData !== 'undefined' ? oldData.descripcion : '' %></textarea>
        </div>
        <div class="d-flex justify-content-end">
           <a href="/admin/dashboard" class="btn btn-secondary me-2">Cancelar</a>
           <button type="submit" class="btn btn-primary">Guardar Producto</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
