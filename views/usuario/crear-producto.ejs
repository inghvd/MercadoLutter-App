<%- include('../partials/header', { title: 'Editar Mi Producto' }) %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-header">
          <h3>Editando: <%= producto.nombre %></h3>
        </div>
        <div class="card-body">
          <form action="/usuario/editar-producto/<%= producto._id %>" method="POST" enctype="multipart/form-data">
            
            <div class="mb-3">
              <label for="nombre" class="form-label">Nombre del Producto</label>
              <input type="text" class="form-control" id="nombre" name="nombre" value="<%= producto.nombre %>" required>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="precio" class="form-label">Precio (Gs.)</label>
                <input type="number" class="form-control" id="precio" name="precio" value="<%= producto.precio %>" required>
              </div>
              <div class="col-md-6 mb-3">
                <label for="stock" class="form-label">Stock Disponible</label>
                <input type="number" class="form-control" id="stock" name="stock" value="<%= producto.stock %>" required>
              </div>
            </div>

            <div class="mb-3">
              <label for="categoria" class="form-label">Ubicación / Categoría</label>
              <input type="text" class="form-control" id="categoria" name="categoria" value="<%= producto.categoria %>" required>
            </div>

            <!-- SUBIDA MÚLTIPLE A CLOUDINARY (hasta 10 imágenes) -->
            <div class="mb-3">
              <label for="imagenes" class="form-label">Cambiar Fotos (Opcional - máx. 10)</label>
              <input 
                type="file" 
                class="form-control" 
                id="imagenes" 
                name="imagenes" 
                multiple 
                accept="image/*"
              >
              <div class="form-text text-info">
                Puedes seleccionar varias fotos (Ctrl + clic). Si subes nuevas, reemplazarán todas las anteriores.
              </div>
            </div>

            <!-- Mostrar imágenes actuales (opcional, bonito) -->
            <% if (producto.imagenes && producto.imagenes.length > 0) { %>
              <div class="mb-3">
                <label class="form-label">Fotos actuales:</label>
                <div class="row g-3">
                  <% producto.imagenes.forEach(img => { %>
                    <div class="col-4 col-md-3">
                      <img src="<%= img.url %>" class="img-fluid rounded shadow-sm" alt="Foto actual">
                    </div>
                  <% }) %>
                </div>
              </div>
            <% } %>

            <div class="mb-3">
              <label for="descripcion" class="form-label">Descripción Detallada</label>
              <textarea class="form-control" id="descripcion" name="descripcion" rows="5" required><%= producto.descripcion %></textarea>
            </div>

            <div class="d-flex justify-content-end gap-2">
              <a href="/usuario/productos" class="btn btn-secondary">Cancelar</a>
              <button type="submit" class="btn btn-success">Guardar Cambios</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
